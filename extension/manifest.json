{
  "manifest_version": 2,

  "name": "Q",
  "version": "1.0",
  "description": "Junction Project",
  "background": {
    "persistent": false,
    "scripts": ["bg.js"]
  },
  "permissions": ["background", "bookmarks", "cookies", "notifications", "webNavigation", "webRequest", "activeTab"],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}